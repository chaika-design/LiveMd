{
  "manifest_version": 2,

  "name": "LiveMd",
  "description": "Using markdown to write a memo on browser with marked",
  "version": "0.1",

  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
