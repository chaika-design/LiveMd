@import "variables.styl"

.output-area
  color: #2f3435
  font-family: 'Open Sans', 'Helvetica Neue', 'Helvetica', 'Arial', 'ヒラギノ角ゴ Pro W3', 'Hiragino Kaku Gothic Pro', 'メイリオ', Meiryo, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif
  font-size: 105%
  line-height: line-height
  margin-bottom: 2em

  /* reset */
  a
    color: color-link
    text-decoration: none
    &:hover
      color: #2a8998

  strong, b
    font-weight: bold

  em
    font-style: italic

  code
    background: color-code
    text-shadow: 0 1px #fff
    padding: 0 0.3em

  del
    text-decoration: line-through

  sub, sup
    font-size: 75%
    line-height: 0
    position: relative

  :root sub, :root sup
    vertical-align: baseline

  sup
    top: -0.5em

  sub
    bottom: -0.2em

  acronym, abbr
    border-bottom: 1px dotted
    font-variant: normal

  abbr
    cursor: help

  h1, h2, h3, h4, h5, h6
    color: color-title
    font-weight: bold
    background: none
    border: none
    a
      color: color-title
      text-decoration: none
      &:hover
        color: color-title

  pre, code
    font-family: font-mono
    font-size 1em

  figure
    display: block
    margin: 0
    padding: 0

  .left, .alignleft
    float: left

  .right, .alignright
    float: right

  /* outputed text styles */
  p
    margin: 0 0 1em 0
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: auto
  a[title*="Flickr"] img
    height: auto!important
  h1, h2, h3, h4, h5, h6
    margin: 1.25em 0 .75em 0
    line-height: 1.5
  h1
    font-size: 170%
  h2
    font-size: 160%
  h3
    font-size: 140%
  h4
    font-size: 130%
  h5
    font-size: 110%
  h6
    font-size: 100%
  dt
    font-weight: bold
  ul
    list-style: disc !important
  ol
    list-style: decimal !important
  ul, ol, dl
    margin: 0 0 1em 1.5em
    padding: 0
    li ul, li ol
      margin-bottom: 0

  table
    width: 100%
    border-collapse: collapse
    border-spacing: 0

  th
    font-weight: bold
    border-bottom: 3px solid color-border
    padding-bottom: 0.5em

  td
    border-bottom: 1px solid color-border
    padding: 10px 0

  blockquote
    font-family: font-serif
    margin: 1.5em 2.6em
    padding: 5px 20px
    border-left: 2px solid #aaa
    color: color-footer
    p:last-child
      margin-bottom: 0
    footer
      font-size: font-size
      font-family: font-sans
      cite
        &:before
          content: "—"
          padding: 0 0.5em

  .pullquote
    border-left: 0
    font-family: font-serif
    text-align: left
    width: 45%
    margin: 10px 0 0 0
    .left
      margin-left: 0.5em
      margin-right: 1em
    .right
      margin-right: 0.5em
      margin-left: 1em

  .caption
    color: color-default
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center

  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0

  pre
    padding: 15px
    background: #f5f5f5
    border: 0
    border-bottom-right-radius: 0
    border-bottom-left-radius: 0
    border-top-left-radius: 0
    border-radius: 3px
    background-clip: padding-box
    word-wrap: normal
    overflow-x: auto
    font-size: 100%
    line-height: 1.3

  figure.highlight
    margin-bottom: 1em

  hr
    width: 20%
    margin: 3em auto
    border: 0
    border-top: 3px solid #d5d5d5
